<!DOCTYPE html>

<html>

<head>
   <!-- meta tags -->
   <meta charset="UTF-8">
   <meta name="author" content="Kevin Tortolini">
   <meta name="description" content="Personal NFT Mint">
   <meta http-equiv="content-type" content="text/html; charset=utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <!-- title of the page -->
   <title>Contact</title>
   <!-- styling links -->
   <link rel="stylesheet" href="./css/style.css">
   <link rel="stylesheet" href="https://use.typekit.net/fgx8bim.css">
   <link rel="icon" type="image/svg+xml" href="./images/favicon.svg">
   <!-- note: https://genartnft-cdn.nyc3.cdn.digitaloceanspaces.com/favicon.svg -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <!-- script links -->
   <script defer type="module" src="./js/contact.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/motion@12.0.6/dist/motion.min.js"></script>
   <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</head>

<body class="d-flex flex-column min-vh-100">
   <!-- navbar partial here-->
   <container>
      <%- include('./partials/navbar.ejs') %>
   </container>

   <!-- main section -->
   <section class="main-section position-relative flex-grow-1">
      <div class="position-relative w-100">
         <div class="container">
            <div class="pt-5 mt-5"></div>
            <div class="row">
               <div class="col-sm-8 mx-auto">
                  <div class="m-4">
                     <form id="contact-form" class="p-4 needs-validation rounded bg-white shadow-sm" novalidate>
                        <div class="row justify-content-start mb-2">
                           <div class="row">
                              <!-- first name -->
                              <div class="col-4 m-2">
                                 <label for="contact-first" class="form-label">First name</label>
                                 <input type="text" class="form-control" id="contact-first" required>
                                 <div class="invalid-feedback">
                                    Please enter your first name.
                                 </div>
                              </div>
                              <!-- middle initial -->
                              <div class="col-1 my-2 mx-5">
                                 <label for="contact-middle" class="form-label">Middle</label>
                                 <input type="text" class="form-control" id="contact-middle">
                              </div>
                              <!-- last name-->
                              <div class="col-4 m-2">
                                 <label for="contact-last" class="form-label">Last name</label>
                                 <input type="text" class="form-control" id="contact-last" required>
                                 <div class="invalid-feedback">
                                    Please enter your last name.
                                 </div>
                              </div>
                           </div>
                           <!-- email address -->
                           <div class="row">
                              <div class="col-7 m-2">
                                 <label for="contact-email-addr" class="form-label">Email address</label>
                                 <input type="email" class="form-control" id="contact-email-addr"
                                    aria-describedby="contact-email-help" placeholder="name@example.com" required>
                                 <div class="invalid-feedback" id="contact-email-help">
                                    Format should be name@example.com.
                                 </div>
                              </div>
                           </div>
                           <!-- question and/or comment -->
                           <div class="row">
                              <div class="col m-2">
                                 <label for="contact-question" class="form-label">Question or comment</label>
                                 <div class="input-group has-validation">
                                    <textarea class="form-control" id="contact-question" rows="7" maxlength="1000"
                                       aria-describedby="contact-question-help" required></textarea>
                                    <div id="contact-question-help" class="invalid-feedback">
                                       Please enter your question or comment up to 1000 characters.
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <div class="col m-2">
                              <div>
                                 <button id="send-contact" name="sendContact"
                                    class="btn font-standard py-3 px-5 shadow-sm rounded fs-6 bg-gradient bg-black bg-opacity-10"
                                    type="submit">Submit
                                 </button>
                                 <span class="m-2" id="contact-button-response"></span>
                                 <span class="m-2" id="result"></span>
                              </div>
                           </div>
                        </div>
                     </form>
                  </div>
               </div>
            </div>
            <div class="pb-5 mb-4"></div>
         </div>
      </div>
   </section>

   <!-- footer partial here -->
   <container>
      <%- include('./partials/footer.ejs') %>
   </container>
</body>

</html>