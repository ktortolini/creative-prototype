<!DOCTYPE html>

<html>

<head>
   <!-- meta tags -->
   <meta charset="UTF-8">
   <meta name="author" content="Kevin Tortolini">
   <meta name="description" content="Personal NFT Mint">
   <meta http-equiv="content-type" content="text/html; charset=utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <!-- title of the page -->
   <title>Projects</title>
   <!-- styling links -->
   <link rel="stylesheet" href="./css/style.css">
   <link rel="icon" type="image/svg+xml" href="./images/favicon.svg">
   <!-- note: https://genartnft-cdn.nyc3.cdn.digitaloceanspaces.com/favicon.svg -->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   <!-- script links -->
   <script defer type="module" src="./js/projects.js"></script>
   <script defer src="./js/elements.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/motion@12.0.6/dist/motion.min.js"></script>
   <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</head>

<body class="d-flex flex-column min-vh-100">
   <!-- navbar partial here-->
   <container>
      <%- include('./partials/navbar.ejs') %>
   </container>

   <!-- main section -->
   <section class="main-section position-relative flex-grow-1">
      <div id="projects" class="d-none">
         <%= JSON.stringify(projectArray) %>
      </div>
      <div class="position-relative w-100">
         <div class="container">
            <div class="pt-5 mt-5"></div>
            <h2 class="p-1 text-center font-strong mb-4">Available Projects</h2>
            <div class="row">
               <div class="row row-cols-1 row-cols-sm-3 row-cols-lg-4 g-3 text-center justify-content-center">
                  <% projectArray.forEach((item, index)=> {%>
                     <div class="col-10">
                        <%- include('./partials/cta.ejs', { img_url: item.img_url, project_name: item.project_name, id:
                           item.id, project_description: item.project_description, quantity: item.quantity, price_eth:
                           item.price_eth, open_date_gmt: item.open_date_gmt, royalty_percent: item.royalty_percent });
                           %>
                     </div>
                     <% }); %>
               </div>
            </div>
         </div>
      </div>
   </section>

   <!-- footer partial here -->
   <container>
      <%- include('./partials/footer.ejs') %>
   </container>
</body>

</html>